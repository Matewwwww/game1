                </div>
                <div class="progress-text" id="progressText"></div>
            </div>
            
            <div class="question-container">
                <div class="code-snippet" id="codeSnippet"></div>
                <div class="options-container" id="optionsContainer"></div>
                <div class="feedback" id="feedback"></div>
                
                <div class="action-buttons">
                    <button class="btn btn-primary" id="submitBtn" onclick="submitAnswer()">
                        <i class="fas fa-paper-plane"></i> Submit
                    </button>
                    <button class="btn btn-secondary" id="nextBtn" onclick="nextQuestion()" style="display: none;">
                        <i class="fas fa-arrow-right"></i> Next
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Results Section -->
        <div class="result-container" id="resultSection">
            <div class="result-icon" id="resultIcon">üéØ</div>
            <div class="result-score" id="resultScore"></div>
            <div class="result-message" id="resultMessage"></div>
            
            <div class="result-stats">
                <div class="stat-item">
                    <span>Questions:</span>
                    <span class="stat-value" id="statQuestions"></span>
                </div>
                <div class="stat-item">
                    <span>Correct Answers:</span>
                    <span class="stat-value" id="statCorrect"></span>
                </div>
                <div class="stat-item">
                    <span>Accuracy:</span>
                    <span class="stat-value" id="statAccuracy"></span>
                </div>
                <div class="stat-item">
                    <span>Time:</span>
                    <span class="stat-value" id="statTime"></span>
                </div>
            </div>
            
            <div class="action-buttons">
                <button class="btn btn-primary" onclick="restartQuiz()">
                    <i class="fas fa-redo"></i> Play Again
                </button>
            </div>
            
