    <script>
        // Quiz questions array (same as before)
        const questions = [
            {
                code: `function greet() {
    console.log("Hello, world!");
}`,
                correct: "JavaScript",
                options: ["Python", "JavaScript", "C++"],
                explanation: "This is JavaScript - uses 'function' keyword and console.log()"
            },
            {
                code: `#include <iostream>
int main() {
    std::cout << "Hello, world!" << std::endl;
    return 0;
}`,
                correct: "C++",
                options: ["C#", "C", "C++"],
                explanation: "This is C++ - uses iostream and std::cout"
            },
            {
                code: `public class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Hello, world!");
    }
}`,
                correct: "Java",
                options: ["Kotlin", "Java", "Scala"],
                explanation: "This is Java - uses 'public class' and System.out.println()"
            },
            {
                code: `print("Hello, world!")`,
                correct: "Python",
                options: ["Ruby", "Python", "Swift"],
                explanation: "This is Python - simple print() function without semicolon"
            },
            {
                code: `<?php
    echo "Hello, world!";
?>`,
                correct: "PHP",
                options: ["Perl", "PHP", "Hack"],
                explanation: "This is PHP - uses <?php ?> tags and echo statement"
            },
            {
                code: `puts "Hello, world!"`,
                correct: "Ruby",
                options: ["Ruby", "Crystal", "Elixir"],
                explanation: "This is Ruby - uses 'puts' for output"
            },
            {
                code: `using System;
class Program {
    static void Main() {
        Console.WriteLine("Hello, world!");
    }
}`,
                correct: "C#",
                options: ["F#", "C#", "Visual Basic"],
                explanation: "This is C# - uses 'using System' and Console.WriteLine()"
            },
            {
                code: `fn main() {
    println!("Hello, world!");
}`,
                correct: "Rust",
                options: ["Go", "Rust", "Zig"],
                explanation: "This is Rust - uses 'fn main()' and println!() macro"
            },
            {
                code: `package main
import "fmt"
func main() {
    fmt.Println("Hello, world!")
}`,
                correct: "Go",
                options: ["Go", "Dart", "Nim"],
                explanation: "This is Go - uses 'package main' and fmt.Println()"
            },
            {
                code: `let greeting = "Hello, world!"
print(greeting)`,
                correct: "Swift",
                options: ["Swift", "Objective-C", "Dart"],
                explanation: "This is Swift - uses 'let' for constants and print()"
            },
            {
                code: `fun main() {
    println("Hello, world!")
}`,
                correct: "Kotlin",
                options: ["Kotlin", "Scala", "Groovy"],
                explanation: "This is Kotlin - uses 'fun' keyword for function declaration"
            },
            {
                code: `main() {
    printf("Hello, world!\\n");
}`,
                correct: "C",
                options: ["C", "C++", "Objective-C"],
                explanation: "This is C - uses printf() function without namespace"
            },
            {
                code: `(println "Hello, world!")`,
                correct: "Clojure",
                options: ["Lisp", "Clojure", "Scheme"],
                explanation: "This is Clojure - Lisp dialect with prefix notation"
            },
            {
                code: `IO.puts "Hello, world!"`,
                correct: "Elixir",
                options: ["Elixir", "Erlang", "Ruby"],
                explanation: "This is Elixir - uses IO.puts with module syntax"
            },
            {
                code: `console.log('Hello, world!');`,
                correct: "TypeScript",
                options: ["TypeScript", "JavaScript", "CoffeeScript"],
                explanation: "This is TypeScript - similar to JavaScript but often used with type annotations"
            }
        ];

        // Quiz state
        let currentQuestion = 0;
        let score = 0;
        let selectedOption = null;
        let startTime = Date.now();
        let timerInterval;
        let quizCompleted = false;

        // DOM Elements
        const quizContainer = document.getElementById('quizContainer');
        const questionSection = document.getElementById('questionSection');
        const resultSection = document.getElementById('resultSection');
        const codeSnippet = document.getElementById('codeSnippet');
        const optionsContainer = document.getElementById('optionsContainer');
        const feedback = document.getElementById('feedback');
        const submitBtn = document.getElementById('submitBtn');
        const nextBtn = document.getElementById('nextBtn');
        const questionCounter = document.getElementById('questionCounter');
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const timerText = document.getElementById('timer-text');
        const resultScore = document.getElementById('resultScore');
        const resultMessage = document.getElementById('resultMessage');
        const resultIcon = document.getElementById('resultIcon');
        const statQuestions = document.getElementById('statQuestions');
        const statCorrect = document.getElementById('statCorrect');
        const statAccuracy = document.getElementById('statAccuracy');
        const statTime = document.getElementById('statTime');
        const loading = document.getElementById('loading');

        // Initialize quiz
        function initQuiz() {
            loading.style.display = 'none';
            questionSection.style.display = 'block';
            resultSection.style.display = 'none';
            startTimer();
            loadQuestion();
            
            // Add touch events for better mobile experience
            document.addEventListener('touchstart', function() {}, {passive: true});
        }

        // Timer functions
        function startTimer() {
            startTime = Date.now();
            timerInterval = setInterval(updateTimer, 1000);
        }

        function updateTimer() {
            const elapsed = Math.floor((Date.now() - startTime) / 1000);
            const minutes = Math.floor(elapsed / 60);
            const seconds = elapsed % 60;
            timerText.textContent = `${minutes > 0 ? minutes + 'm ' : ''}${seconds}s`;
        }

        // Load question
        function loadQuestion() {
            if (currentQuestion >= questions.length) {
                showResults();
                return;
            }

            const question = questions[currentQuestion];
            
            // Update UI
            codeSnippet.textContent = question.code;
            questionCounter.textContent = `Question ${currentQuestion + 1} of ${questions.length}`;
            progressText.textContent = `${currentQuestion + 1}/${questions.length}`;
            
            // Update progress bar
            const progressPercentage = ((currentQuestion) / questions.length) * 100;
            progressBar.style.width = `${progressPercentage}%`;
            
            // Clear previous
            optionsContainer.innerHTML = '';
            feedback.style.display = 'none';
            feedback.innerHTML = '';
            submitBtn.style.display = 'block';
            nextBtn.style.display = 'none';
            submitBtn.disabled = true;
            
            // Add options
            question.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.className = 'option-btn';
                button.textContent = option;
                button.onclick = () => selectOption(index, button);
                optionsContainer.appendChild(button);
            });

            selectedOption = null;
        }

        // Select option
        function selectOption(index, button) {
            if (quizCompleted) return;
            
            // Reset selection
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            
            // Select new option
            button.classList.add('selected');
            selectedOption = index;
            submitBtn.disabled = false;
        }

        // Submit answer
        function submitAnswer() {
            if (selectedOption === null || quizCompleted) return;

            const question = questions[currentQuestion];
            const selectedBtn = document.querySelectorAll('.option-btn')[selectedOption];
            const isCorrect = selectedBtn.textContent === question.correct;

            // Mark correct/incorrect
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.disabled = true;
                if (btn.textContent === question.correct) {
                    btn.classList.add('correct');
                } else if (btn.classList.contains('selected')) {
                    btn.classList.add('incorrect');
                }
            });

            // Show feedback
            feedback.innerHTML = `
                <div>${isCorrect ? '‚úÖ Correct!' : '‚ùå Incorrect!'}</div>
                <div class="explanation">${question.explanation}</div>
            `;
            feedback.className = `feedback ${isCorrect ? 'correct' : 'incorrect'}`;
            feedback.style.display = 'block';

            // Update score
            if (isCorrect) {
                score++;
            }

            // Update buttons
            submitBtn.style.display = 'none';
            nextBtn.style.display = 'block';
            
            // Scroll to feedback on mobile
            setTimeout(() => {
                feedback.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 300);
        }

        // Next question
        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion < questions.length) {
                loadQuestion();
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else {
                showResults();
            }
        }

        // Show results
        function showResults() {
            clearInterval(timerInterval);
            quizCompleted = true;
            
            const totalTime = Math.floor((Date.now() - startTime) / 1000);
            const minutes = Math.floor(totalTime / 60);
            const seconds = totalTime % 60;
            const percentage = Math.round((score / questions.length) * 100);
            
            // Update result section
            questionSection.style.display = 'none';
            resultSection.style.display = 'block';
            
            resultScore.textContent = `${score}/${questions.length}`;
            
            // Set message and icon based on score
            let message, icon;
            if (percentage === 100) {
                message = 'üéâ Perfect Score! You\'re a coding language expert!';
                icon = 'üèÜ';
            } else if (percentage >= 80) {
                message = '‚≠ê Excellent! You know your programming languages!';
                icon = '‚≠ê';
            } else if (percentage >= 60) {
                message = 'üëç Great job! Solid programming language knowledge.';
                icon = 'üëç';
            } else if (percentage >= 40) {
                message = 'üòä Good effort! Keep learning and practicing.';
                icon = 'üìö';
            } else {
                message = 'üí™ Keep practicing! Every expert was once a beginner.';
                icon = 'üöÄ';
            }
            
            resultMessage.textContent = message;
            resultIcon.textContent = icon;
            
            // Update stats
            statQuestions.textContent = questions.length;
            statCorrect.textContent = score;
            statAccuracy.textContent = `${percentage}%`;
            statTime.textContent = `${minutes > 0 ? minutes + 'm ' : ''}${seconds}s`;
            
            // Complete progress bar
            progressBar.style.width = '100%';
            progressText.textContent = 'Completed!';
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Restart quiz
        function restartQuiz() {
            currentQuestion = 0;
            score = 0;
            selectedOption = null;
            quizCompleted = false;
            
            questionSection.style.display = 'block';
            resultSection.style.display = 'none';
            
            startTimer();
            loadQuestion();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Share results
        async function shareResults() {
            const shareText = `I scored ${score}/${questions.length} on the Programming Language Quiz! Can you beat my score? Try it here:`;
            
            if (navigator.share) {
                try {
                    await navigator.share({
                        title: 'Programming Language Quiz',
                        text: shareText,
                        url: window.location.href
                    });
                } catch (err) {
                    console.log('Error sharing:', err);
                    fallbackShare();
                }
            } else {
                fallbackShare();
            }
            
            function fallbackShare() {
                // Create a temporary share URL
                const shareUrl = `${window.location.origin}${window.location.pathname}`;
                const fullText = `${shareText}\n${shareUrl}`;
                
                // Try to copy to clipboard
                navigator.clipboard.writeText(fullText).then(() => {
                    alert('Results copied to clipboard! Share it with your friends.');
                }).catch(() => {
                    // Fallback if clipboard fails
                    prompt('Copy this link to share:', shareUrl);
                });
            }
        }

        // Handle back button
        window.addEventListener('popstate', function(event) {
            if (quizCompleted) {
                restartQuiz();
            }
        });

        // Prevent zoom on double tap
        let lastTouchEnd = 0;
        document.addEventListener('touchend', function(event) {
            const now = (new Date()).getTime();
            if (now - lastTouchEnd <= 300) {
                event.preventDefault();
            }
            lastTouchEnd = now;
        }, false);

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            // Show loading briefly
            setTimeout(initQuiz, 300);
            
            // Add viewport meta tag dynamically for better control
            const viewport = document.querySelector('meta[name="viewport"]');
            viewport.content = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover';
        });

        // Handle orientation change
        window.addEventListener('orientationchange', function() {
            // Small delay to handle orientation change
            setTimeout(() => {
                window.scrollTo(0, 0);
            }, 100);
        });

        // Prevent pull-to-refresh on mobile
        document.body.addEventListener('touchmove', function(e) {
            if (e.touches.length > 1) e.preventDefault();
        }, { passive: false });
    </script>
</body>
</html>
